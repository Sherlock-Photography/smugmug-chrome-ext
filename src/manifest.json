{
	"manifest_version" : 2,

	"name" : "Unofficial SmugMug extension for Chrome",
	"description" : "Extra features for SmugMug site owners.",
	"version" : "0.1.4",
	"author" : "Nicholas Sherlock of Sherlock Photography",

	"content_security_policy" : "script-src 'self' 'unsafe-eval'; object-src 'self'",

	"permissions" : [ "http://*.smugmug.com/", "tabs" ],
	
	"content_scripts" : [ {
		"matches" : [ "http://*.smugmug.com/*" ],
		"js" : [ "content.js" ]
	} ],

	"background" : {
		"scripts" : [ "background.js" ]
	},

	"page_action" : {
		"default_icon" : {
			"19" : "images/icon19.png",
			"38" : "images/icon38.png"
		},

		"default_popup" : "popup.html"
	},
	
	"update_url": "http://chrome.sherlockphotography.org/smugmug/updates.xml"
}