{
  "manifest_version": 2,

  "name": "Unofficial SmugMug extension for Chrome",
  "description": "Extra features for SmugMug site owners.",
  "version": "1.0",

  "permissions": [
    "http://*.smugmug.com/",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["http://*.smugmug.com/*"],
      "js": ["content.js"]
    }
  ],  
  "background": {
 	"scripts" : ["background.js"]
  },
  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}