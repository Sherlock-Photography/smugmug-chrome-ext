{
	"manifest_version" : 2,

	"name" : "Unofficial SmugMug extension for Chrome",
	"description" : "Extra features for SmugMug site owners",
	"version" : "0.3.5",
	"author" : "Nicholas Sherlock of Sherlock Photography",

	"content_security_policy" : "script-src 'self' 'unsafe-eval'; object-src 'self'",

	"permissions" : [ "http://*.smugmug.com/", "activeTab", "storage" ],
	
	"content_scripts" : [
		{
			"matches" : [ "http://*.smugmug.com/*" ],
			"js" : [ "content.js" ],
			"run_at" : "document_idle"
		},
		{
			"matches" : [ "http://*.smugmug.com/*" ],
			"js" : [ "content-start.js" ],
			"run_at" : "document_start"
		}		
	],

	"background" : {
		"scripts" : [ "background.js" ]
	},

	"icons" : {
		"19" : "images/icon19.png",
		"38" : "images/icon38.png",
		"128" : "images/icon128.png"
	},

	"page_action" : {
		"default_icon" : {
			"19" : "images/icon19.png",
			"38" : "images/icon38.png"
		},

		"default_popup" : "popup.html"
	},
	
	"web_accessible_resources": [
		"tweaks/*"
	]
}